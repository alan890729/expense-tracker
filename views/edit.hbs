{{> message}}

<div class="container">
    <form action="/records/{{record.id}}/?_method=PUT" method="post" class="mb-3">
        <div class="row my-3">
            <div class="row col-md-8 col-xl-6 mx-auto">
                <div class="col-md-4 d-md-flex d-none align-items-center">
                    <div>
                        <span>*必填欄位</span>
                    </div>
                </div>
                <div class="col-md-8 d-flex justify-content-center">
                    <h1 class="m-0">請修改你的支出</h1>
                </div>
            </div>
        </div>

        <div class="row mb-3 d-md-none">
            <div class="row col-md-8 col-xl-6 mx-auto">
                <div>
                    <span>*必填欄位</span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="row col-md-8 col-xl-6 mx-auto">
                <div class="col-md-4 d-flex align-items-center">
                    <label for="name" class="form-label m-0">名稱*</label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="name" class="form-control" name="name" value="{{record.name}}" required>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="row col-md-8 col-xl-6 mx-auto">
                <div class="col-md-4 d-flex align-items-center">
                    <label for="date" class="form-label m-0">日期*</label>
                </div>
                <div class="col-md-8">
                    <input type="date" id="date" class="form-control" name="date" value="{{record.date}}" required>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="row col-md-8 col-xl-6 mx-auto">
                <div class="col-md-4 d-flex align-items-center">
                    <label for="categoryId" class="form-label m-0">類別*</label>
                </div>
                <div class="col-md-8">
                    <select name="categoryId" class="form-select" id="categoryId" required>
                        {{#each categories as |category|}}
                        <option value="{{ category.id }}" {{#if category.prevSelectedCategory}} selected {{/if}}>{{ category.name }}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="row col-md-8 col-xl-6 mx-auto">
                <div class="col-md-4 d-flex align-items-center">
                    <label for="amount" class="form-label m-0">金額*</label>
                </div>
                <div class="col-md-8">
                    <input type="number" id="amount" class="form-control" name="amount" value="{{record.amount}}" required>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="row col-md-8 col-xl-6 mx-auto">
                <div class="col-md-4"></div>
                <div class="col-md-8 d-flex justify-content-center">
                    <button type="submit" class="btn btn-lg btn-light w-50">送出</button>
                </div>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="row col-md-8 col-xl-6 mx-auto">
            <div class="col-md-4"></div>
            <div class="col-md-8 d-flex justify-content-center">
                <div class="w-50">
                    {{> back-to-index}}
                </div>
            </div>
        </div>
    </div>
</div>